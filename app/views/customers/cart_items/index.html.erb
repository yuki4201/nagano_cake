<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <h5>ショッピングカート</h5>
        <%= link_to "カートを空にする", root_path, method: :delete, class: "btn btn-danger" %></td>

        <thead>
          <table border="1">
            <tr>
                <td>商品名</td> 
                <td>単価(税込)</td> 
                <td>数量</td>
                <td>小計</td>
                <td>　　　</td>
            </tr>
            <% @cart_items.each do |cart_item| %>
            <tr>
                <td><%= cart_item.name %></td>
                <td><%= cart_item.item.with_tax_price %></td>
                <td><%= (cart_item.item.price * 1.1).floor * cart_item.amount %></td>
                <% @合計金額 +=  (cart_item.item.price * 1.1).floor * cart_item.amount %>
                <td><%= link_to "削除する", root_path, method: :delete, class: "btn btn-danger" %></td>
              </td>
            </tr>
            <% end %>
          </table>
        </thead>
        <div class="col">
          <%= link_to "買い物を続ける", customers_path, class: "btn btn-primary" %>
          <%= link_to "情報入力に進む", new_customers_order_path, class: "btn btn-success" %>