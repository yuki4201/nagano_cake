<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <h5>会員情報編集</h5>
          <%= form_with model: @customer, url:customers_my_page_path, local:true do |f| %>
          <form>
            <div class="form-group row">
              <label for="name" class="col-sm-2 col-form-label">氏名</label>
              <div class="col-sm-10">
                <%= f.text_field :first_name %>
                <%= f.text_field :last_name %>
              </div>
            </div>
            <div class="form-group row">
              <label for="kana" class="col-sm-2 col-form-label">フリガナ</label>
              <div class="col-sm-10">
                <%= f.text_field :last_name_kana %>
                <%= f.text_field :first_name_kana %>
              </div>
            </div>
            <div class="form-group row">
              <label for="postal_code" class="col-sm-2 col-form-label">郵便番号</label>
              <div class="col-sm-10">
                <%= f.text_field :postal_code %>
              </div>
            </div>
            <div class="form-group row">
              <label for="address" class="col-sm-2 col-form-label">住所</label>
              <div class="col-sm-10">
                <%= f.text_field :address, :size=>"50" %>
              </div>
            </div>
            <div class="form-group row">
              <label for="telephone_number" class="col-sm-2 col-form-label">電話番号</label>
              <div class="col-sm-10">
                <%= f.text_field :telephone_number %>
              </div>
            </div>
            <div class="form-group row">
              <label for="email" class="col-sm-2 col-form-label">メールアドレス</label>
              <div class="col-sm-10">
                <%= f.text_field :email %>
              </div>
            </div>
            <%= f.submit "編集内容を保存", class: "btn btn-success" %>
            <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger" %>
          <% end %>
      </div>
    </div>
  </div>
</main>