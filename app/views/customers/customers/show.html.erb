<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="p-5"></div>
        <h5>マイページ</h5>
        <b>登録情報</b>
        <%= link_to "編集する", edit_customers_customers_path, class: "btn btn-success" %>
        <div class="p-3"></div>
        <div class="row">
          <div class="col-7">
            <table class="table" border=2>
            <tr>
              <td>氏名</td>
              <td><%= @customer.last_name %>
                  <%= @customer.first_name %></td>
            </tr>
            <tr>
              <td>カナ</td>
              <td><%= @customer.last_name_kana %>
                  <%= @customer.first_name_kana %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= @customer.postal_code %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= @customer.telephone_number %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= @customer.email %></td>
            </tr>
          </table>
        </thead>
        <div class="p-1"></div>
        <b>配送先</b>
        <%= link_to "一覧を見る", customers_addresses_path, class: "btn btn-primary" %>
        <div class="p-3"></div>
        <b>注文履歴</b>
        <%= link_to "一覧を見る", customers_orders_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</main>