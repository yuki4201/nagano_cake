<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <h2>注文履歴一覧</h2>
        <div class="p-3"></div>
        <thead>
          <table class="table" border="2">
            <tr>
              <th>注文日</th> 
              <th>配送先</th>
              <th>注文商品</th>
              <th>支払金額</th>
              <th>ステータス</th>
              <th>注文詳細</th>
            </tr>
            <tbody>
              <% @orders.each do |order| %>
              <tr>
                <td><%= order.created_at %></td>
                <td><%= order.address %></td>
                <td>
                  <% order.order_details.each do |order_detail| %>
                    <%= order_detail.item.name %></br>
                  <% end %>
                </td>
                <td><%= order.total_payment %></td>
                <td><%= order.status %></td>
                <td><%= link_to "詳細" %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </thead>
      </div>
    </div>
  </div>
</main>