<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <h2>会員情報編集</h2>
        

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

          <div class="form-group">
            <label for="name">氏名</label>
            <%= f.text_field :last_name %>
            <%= f.text_field :first_name %>
          </div>
          <div class="form-group">
            <label for="kana">フリガナ</label>
            <%= f.text_field :last_name_kana %>
            <%= f.text_field :first_name_kana %>
          </div>
          <div class="form-group">
            <label for="postal_code">郵便番号</label>
            <%= f.text_field :postal_code %>
          </div>
          <div class="form-group">
            <label for="address">住所</label>
            <%= f.text_field :address %>
          </div>
          <div class="form-group">
            <label for="telephone_number">電話番号</label>
            <%= f.text_field :telephone_number %>
          </div>
          <div class="form-group">
            <label for="email">メールアドレス</label>
            <%= f.text_field :email %>
          </div>
          <%= f.submit "編集内容を保存", class: "btn btn-success" %>
          <%= link_to "退会する", customer_unsubscribe_path, class: "btn btn-danger" %>
          <% end %>
      </div>
    </div>
  </div>
</main>