<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <h2>新規会員登録</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        　<%= render "customers/shared/error_messages", resource: resource %>
        　
          <div class="form-group">
            <label for="name">名前</label>
            (姓)<%= f.text_field :last_name %>
            (名)<%= f.text_field :first_name %>
          </div>
           
          <div class="form-group">
            <label for="kana">フリガナ</label>
            (セイ)<%= f.text_field :last_name_kana %>
            (メイ)<%= f.text_field :first_name_kana %>
          </div>
           
          <div class="form-group">
            <label for="email">メールアドレス</label>
            <%= f.text_field :email %>
          </div>
           
          <div class="form-group">
            <label for="postal_code">郵便番号(ハイフンなし)</label>
            <%= f.text_field :postal_code %>
          </div>
          <div class="form-group">
            <label for="address">住所</label>
            <%= f.text_field :address %>
          </div>
           
          <div class="form-group">
            <label for="telephone_number">電話番号(ハイフンなし)</label>
            <%= f.text_field :telephone_number %>
          </div>
           
  　　  　　<div class="field">
  　　  　　　　  <%= f.label :password %>
  　　  　　　　  <% if @minimum_password_length %>
  　　  　　　　  <em>(<%= @minimum_password_length %> characters minimum)</em>
  　　  　　　　  <% end %>
  　　  　　　　  <%= f.password_field :password, autocomplete: "new-password" %>
  　　 　　　</div>
           
  　　  　　　<div class="field">
 　　    　　   <%= f.label :password_confirmation %>
 　　    　　   <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
 　　　  　   </div>          
           
          <div class="actions">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
          <% end %>
           
          <h5>既に登録済みの方</h5>
          <%= link_to "こちら", new_customer_session_path %>　からログインしてください。
      </div>
    </div>
  </div>
</main>