<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="p-5"></div>
        <h5>新規会員登録</h5>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        　<%= render "customers/shared/error_messages", resource: resource %>
        <form>
          <div class="form-group row">
            <label for="name" class="col-sm-2">名前</label>
            <div class="col-sm-10">
              (姓)<%= f.text_field :last_name %>
           　  (名)<%= f.text_field :first_name %>
            </div>
          </div>
          <div class="form-group row">
            <label for="kana" class="col-sm-2">フリガナ</label>
            <div class="col-sm-10">
              (セイ)<%= f.text_field :last_name_kana %>
              (メイ)<%= f.text_field :first_name_kana %>
            </div>
          </div>
          <div class="form-group row">
            <label for="email" class="col-sm-2">メールアドレス</label>
            <div class="col-sm-10">
              <%= f.text_field :email %>
            </div>
          </div>
          <div class="form-group row">
            <label for="postal_code" class="col-sm-2">郵便番号(ハイフンなし)</label>
            <div class="col-sm-10">
              <%= f.text_field :postal_code %>
            </div>
          </div>
          <div class="form-group row">
            <label for="address" class="col-sm-2">住所</label>
            <div class="col-sm-10">
              <%= f.text_field :address, size: "50" %>
            </div>
          </div>
          <div class="form-group row">
            <label for="telephone_number" class="col-md-2">電話番号(ハイフンなし)</label>
            <div class="col-sm-10">
              <%= f.text_field :telephone_number %>
            </div>
          </div>
  　　 　　   <div class="form-group row">
  　   　  　  <%= f.label :パスワード %>
  　   　  　  <% if @minimum_password_length %> （6文字以上）
  　   　  　  <% end %>
  　   　  　  <%= f.password_field :password, autocomplete: "new-password" %>
  　  　  　</div>
          <div class="form-group row">
            <%= f.label :パスワード %>（確認用）
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
          <div class="actions">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
          <% end %>
          </br>
          <h5>既に登録済みの方</h5>
          <%= link_to "こちら", new_customer_session_path %>　からログインしてください。
      </div>
    </div>
  </div>
</main>