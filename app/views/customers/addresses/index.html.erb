<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <h5>配送先登録／一覧</h5>
        <%= form_with model: @address, url:customers_addresses_path(@address.id), local:true do |f| %>
        <form>
          <div class="form-group row">
            <label for="postal_code" class="col-sm-2 col-form-label">郵便番号(ハイフンなし)</label>
            <div class="col-sm-10">
              <%= f.text_field :postal_code %>
            </div>
          </div>

        <div class="form-group">
          <label for="address">住所</label>
          <%= f.text_field :address %>
        <div class="form-group">
          <label for="name">宛名</label>
          <%= f.text_field :name %>
          <%= f.submit "新規登録", class: "btn btn-success" %>
        <% end %>
        <div class="p-3"></div>
        <thead>
          <table border="1">
            <% @addresses.each do |address| %>
            <tr>
              <td>郵便番号</td> 
              <td>住所</td>
              <td>宛名</td>
              <td>　　　</td>
            </tr>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to "編集する", edit_customers_address_path(address), class: "btn btn-success" %>
                <%= link_to "削除する", root_path, method: :delete, class: "btn btn-danger" %>
              </td>
            </tr>
            <% end %>
          </table>
        </thead>
        </div>
        </div>
        </div>
      </div>
    </div>
  </div>
</main>