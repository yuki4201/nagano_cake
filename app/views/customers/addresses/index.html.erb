<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="p-5"></div>
        <h5>配送先登録／一覧</h5>
        <%= form_with model: @address, url:customers_addresses_path(@address.id), local:true do |f| %>
        </br>
        <form>
          <div class="form-group row">
            <label for="postal_code" class="col-sm-2">郵便番号(ハイフンなし)</label>
            <div class="col-sm-10">
              <%= f.text_field :postal_code %>
            </div>
          </div>
          <div class="form-group row">
            <label for="postal_code" class="col-sm-2">住所</label>
            <div class="col-sm-10">
              <%= f.text_field :address, size: "75" %>
            </div>
          </div>
          <div class="form-group row">
            <label for="postal_code" class="col-sm-2">宛名</label>
            <div class="col-sm-10">
              <%= f.text_field :name %>
              <%= f.submit "新規登録", class: "btn btn-success" %>
            </div>
          </div>
        <% end %>
        </form>
        <div class="p-3"></div>
        <thead>
          <table class=table border="2">
            <tr>
              <td>郵便番号</td> 
              <td>住所</td>
              <td>宛名</td>
              <td>　　　</td>
            </tr>
            <tr>
              <% @addresses.each do |address| %>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to "編集する", edit_customers_address_path(address), class: "btn btn-success" %>
                <%= link_to "削除する", customers_address_path(address), method: :delete, class: "btn btn-danger" %>
              </td>
            </tr>
            <% end %>
          </table>
        </thead>
      </div>
    </div>
  </div>
</main>