<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="p-5"></div>
        <h5>配送先編集</h5>
        </br>
        <%= form_with model: @addresses, url:customers_addresses_path, local:true do |f| %>
        <form>
          <div class="form-group row">
            <label for="postal_code" class="col-sm-2">郵便番号(ハイフンなし)</label>
            <div class="col-sm-10">
              <%= f.text_field :postal_code %>
            </div>
          </div>
          <div class="form-group row">
            <label for="postal_code" class="col-sm-2">住所</label>
            <div class="col-sm-10">
              <%= f.text_field :address %>
            </div>
          </div>
          <div class="form-group row">
            <label for="postal_code" class="col-sm-2">宛名</label>
            <div class="col-sm-10">
              <%= f.text_field :name %>
              <%= f.submit "変更内容を保存", class: "btn btn-success" %>
            </div>
          </div>
        </form>
        <% end %>
      </div>
    </div>
  </div>
</main>