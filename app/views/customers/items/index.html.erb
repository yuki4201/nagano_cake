<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <p class="left">
          <span style="font-size:30px;">商品一覧</span></br>
      <tbody>
      <% @items.each do |item| %>
      <tr>
        <%= link_to customers_item_path(item) do %>
        <%= attachment_image_tag item, :image, format: 'jpeg', size:"200x200", fallback: "no_image.jpg" %></br>
        <% end %>
      </tr>
      <tr>
        <td><%= item.name %></td></br>
        <td>¥<%= item.price %></td>
      </tr>
      <% end %>
      </div>
    </div>
  </div>
</main>