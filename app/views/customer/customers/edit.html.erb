<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <h5>会員情報編集</h5>
          <%= form_with model: @customer, url:customer_my_page_path, local:true do |f| %>
          <div class="form-group">
            <label for="name">氏名</label>
            <%= f.text_field :first_name %>
            <%= f.text_field :last_name %>
          </div>
          <div class="form-group">
            <label for="kana">フリガナ</label>
            <%= f.text_field :first_name_kana %>
            <%= f.text_field :last_name_kana %>
          </div>
          <div class="form-group">
            <label for="postal_code">郵便番号</label>
            <%= f.text_field :postal_code %>
          </div>
          <div class="form-group">
            <label for="address">住所</label>
            <%= f.text_field :address %>
          </div>
          <div class="form-group">
            <label for="telephone_number">電話番号</label>
            <%= f.text_field :telephone_number %>
          </div>
          <div class="form-group">
            <label for="email">メールアドレス</label>
            <%= f.text_field :email %>
          </div>
          <%= f.submit "編集内容を保存", class: "btn btn-success" %>
          <%= link_to "退会する", new_admin_session_path, class: "btn btn-danger" %>
          <% end %>
      </div>
    </div>
  </div>
</main>