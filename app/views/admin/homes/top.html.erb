<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="p-2"></div>
        <h5>注文履歴一覧</h5>
        <table class="table">
          <thead>
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th colspan="3"></th>
            </tr>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= link_to admin_order_path(order) do %>
                      <%= order.created_at %>
                    <% end %>
                </td>
                <td><%= order.name %></td>
              </tr>
                <% @order_details.each do |order_detail| %>
            　   <td><%= order_detail.amount %></td>
              </tr>
            <% end %>
            <% end %>
          </table>
        </thead>
      </div>
    </div>
  </div>
</main>