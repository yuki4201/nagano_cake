<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="p-2"></div>
        <h5>注文履歴一覧</h5>
        <table class="table">
          <thead>
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= link_to admin_path do %>
                    <%= order.created_at %>
                    <% end %>
                </td>
                <td><%= order.address %></td>
                <% @cart_items.each do |cart_item| %>
                <td>
                  <%= cart_item.amount %>
                  </td>
              </tr>
            <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>