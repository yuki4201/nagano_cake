<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="p-2"></div>
    <h2>商品一覧</h2>
    <%= link_to "＋", new_admin_item_path %>
    <table class="table">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
        <th colspan="1"></th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, edit_admin_item_path(item) %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <% if item.is_active == true %>
        <td>販売中</td>
        <% else %>
        <td>販売停止中</td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
</main>