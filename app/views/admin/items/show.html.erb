<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="p-5"></div>
        <h2>商品詳細</h2>
        <table class="table"=0>
          <tbody>
            <% @items.each do |item| %>
            <tr>
              <%= attachment_image_tag item, :image %>
            </tr>
              <td>商品名</td>
              <td><%= item.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= item.introduction %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= item.genre.name %></td>
            </tr>
            <tr>
              <td>税込価格(税抜価格)</td>
              <td><%= item.price %></td>
            </tr>
            <tr>
              <td>販売ステータス</td>
      　　　　<% if item.is_active == true %>
              <td>販売中</td>
              <% else %>
              <td>販売停止中</td>
              <% end %>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>

<%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>