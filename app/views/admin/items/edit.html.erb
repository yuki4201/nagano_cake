<main>
  <p id="notice"></p>

<div class="col-md-8 offset-md-1">
  <h5>商品編集</h5>
  
  <%= form_with model: @item, url:admin_item_path, local:true do |f| %>
  
  <div class="form-group">
    <label for="inputImage">商品画像</label>
    <%= f.attachment_field :image, placeholder: "商品画像" %>
  </div>
  
  <div class="form-group">
    <label for="name">商品名</label>
    <%= f.text_field :name %>
  </div>
  
  <div class="form-group">
    <label for="introduction">商品説明</label>
    <%= f.text_area :introduction %>
  </div>
  
  <div class="form-group">
    <label for="genre">ジャンル</label>
    <%= f.select :genre_id, Genre.all.map { |genre| [genre.name, genre.id] }, {include_blank: '--選択してください--'} %>
  </div>
  
　<div class="form-group">
    <label for="price">税抜価格</label>
      <%= f.text_field :price %>円
  </div>
  
  <div class="form-group">
    <label for="is_active">販売ステータス</label>
    <%= f.radio_button :is_active, value: true %>
    <%= f.label :is_active, '販売中', value: true %>
    <%= f.radio_button :is_active, value: false %>
    <%= f.label :is_active, '販売停止中', value: false %>
  </div>

    <%= f.submit "変更を保存", class: "btn btn-success" %>
  <% end %>
</div>