<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="p-2"></div>
        <h5>商品編集</h5>
        <%= form_with model: @item, url:admin_item_path, local:true do |f| %>
        </br>
        <div class="form-group row">
          <label for="inputImage" class="col-sm-2">商品画像</label>
          <div class="col-sm-10">
            <%= f.attachment_field :image, placeholder: "商品画像" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="name" class="col-sm-2">商品名</label>
          <div class="col-sm-10">
            <%= f.text_field :name %>
          </div>
        </div>
        <div class="form-group row">
          <label for="introduction" class="col-sm-2">商品説明</label>
          <div class="col-sm-10">
            <%= f.text_area :introduction %>
          </div>
        </div>
        <div class="form-group row">
          <label for="genre" class="col-sm-2">ジャンル</label>
          <div class="col-sm-10">
            <%= f.select :genre_id, Genre.all.map { |genre| [genre.name, genre.id] }, {include_blank: '--選択してください--'} %>
          </div>
        </div>
        <div class="form-group row">
          <label for="price" class="col-sm-2">税抜価格</label>
          <div class="col-sm-10">
            <%= f.text_field :price %>円
          </div>
        </div>            
        <div class="form-group row">
          <label for="is_active" class="col-sm-2">販売ステータス</label>
          <div class="col-sm-10">
            <%= f.radio_button :is_active, value: true %>
            <%= f.label :is_active, '販売中', value: true %>
            <%= f.radio_button :is_active, value: false %>
            <%= f.label :is_active, '販売停止中', value: false %>
          </div>
        </div>
        <div class="form-group row">
          <label for="email" class="col-sm-3 col-form-label"></label>
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</main>