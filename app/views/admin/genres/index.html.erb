<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="p-5"></div>
        <h5>ジャンル一覧・追加</h5>
        </br>
        <%= form_with model: @genre, url:admin_genres_path, local:true do |f| %>
        <div class="form-group row">
          <label for="name" class="col-sm-2">ジャンル名</label>
          <div class="col">
            <%= f.text_field :name %>
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    <div class="p-1"></div>
    <div class="row">
      <div class="col-4">
        <table class="table">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th></th>
              <th colspan="1"></th>
            </tr>
          </thead>
        <thead>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </thead>
      </div>
    </div>
  </div>
</main>