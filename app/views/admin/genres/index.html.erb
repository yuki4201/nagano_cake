<main>
  <p id="notice"></p>

<div class="row">
  <div class="col-md-5 offset-md-3">
  <h2>ジャンル一覧・追加</h2>
    
  <%= form_with model: @genres, url:admin_genres_path, local:true do |f| %>

  <div class="form-group">
    <label for="name">ジャンル名</label>
    <%= f.text_field :name %>
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
  </div>
</div>
 <% end %>
 
<div class="row">
  <div class="col-md-5 offset-md-3">
<thead>
  <tr>
    <th>ジャンル</th>
    <th colspan="1"></th>
  </tr>
</thead>
<thead>
  <% @genres.each do |genre| %>
    <tr>
      <%= genre.name %>
    </tr>
  </thead>
  <% end %>
    <tr>
      <%= link_to "編集する", new_admin_item_path, class: "btn btn-success" %>
