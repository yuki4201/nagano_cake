<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="p-5"></div>
        <h5>ジャンル編集</h5>
        <%= form_with model: @genres, url:admin_genre_path, local:true do |f| %>
        <div class="form-group">
          <label for="name">ジャンル名</label>
          <br>
            <%= f.text_field :name, autofocus: true, id:"" %>
          </br>
        </div>
        <div class="form-group">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</main>