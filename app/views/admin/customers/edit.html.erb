<main>
  <p id="notice"></p>

<div class="col-md-8 offset-md-1">
  <h5>会員情報編集画面</h5>
  
  <%= form_with model: @customer, url:admin_customers_path, local:true do |f| %>
  
  <td><%= customer.id %></td>
  
  <div class="form-group">
    <label for="name">氏名</label>
    <%= f.text_field :name %>
  </div>
  
  <div class="form-group">
    <label for="last_name_kana">フリガナ</label>
    <%= f.text_area :last_name_kana %>
    <%= f.text_area :first_name_kana %>
  </div>
  
  <div class="form-group">
    <label for="postal_code">郵便番号</label>
    <%= f.text_area :postal_code %>
  </div>
  
  <div class="form-group">
    <label for="address">住所</label>
    <%= f.text_area :address %>
  </div>
  
　<div class="form-group">
    <label for="telephone_number">電話番号</label>
      <%= f.text_field :telephone_number %>
  </div>
  
　<div class="form-group">
    <label for="email">メールアドレス</label>
      <%= f.text_field :email %>
  </div>
  
  <div class="form-group">
    <label for="is_active">会員ステータス</label>
    <%= f.radio_button :is_active, value: true %>
    <%= f.label :is_active, '有効', value: true %>
    <%= f.radio_button :is_active, value: false %>
    <%= f.label :is_active, '退会', value: false %>
  </div>

    <%= f.submit "変更を保存", class: "btn btn-success" %>
  <% end %>
</div>