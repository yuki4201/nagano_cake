<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="p-5"></div>
        <h5>会員情報編集画面</h5>
        <%= form_with model: @customer, url:admin_customer_path, local:true do |f| %>
        </br>
        <form>
          <div class="form-group row">
            <label for="id" class="col-sm-2">会員ID</label>
            <div class="col-sm-10">
              <%= @customer.id %>
            </div>
          </div>
          <div class="form-group row">
            <label for="name" class="col-sm-2">氏名</label>
            <div class="col-sm-10">
              <%= f.text_field :last_name %>
              <%= f.text_field :first_name %>
            </div>
          </div>
          <div class="form-group row">
            <label for="last_name_kana" class="col-sm-2">フリガナ</label>
            <div class="col-sm-10">
              <%= f.text_field :last_name_kana %>
              <%= f.text_field :first_name_kana %>
            </div>
          </div>
          <div class="form-group row">
            <label for="postal_code" class="col-sm-2">郵便番号</label>
            <div class="col-sm-10">
              <%= f.text_field :postal_code %>
            </div>
          </div>
          <div class="form-group row">
            <label for="address" class="col-sm-2">住所</label>
            <div class="col-sm-10">
              <%= f.text_field :address %>
            </div>
          </div>
          <div class="form-group row">
            <label for="telephone_number" class="col-sm-2">電話番号</label>
            <div class="col-sm-10">
              <%= f.text_field :telephone_number %>
            </div>
          </div>
          <div class="form-group row">
            <label for="email" class="col-sm-2">メールアドレス</label>
            <div class="col-sm-10">
              <%= f.text_field :email %>
            </div>
          </div>
          <div class="form-group row">
            <label for="email" class="col-sm-3"></label>
            <%= f.submit "変更を保存", class: "btn btn-success" %>
          </div>
          <% end %>
      </div>
    </div>
  </div>
</main>