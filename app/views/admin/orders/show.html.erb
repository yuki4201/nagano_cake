<main>
  <p id="notice"></p>
  <div class="container">
    <h2>注文履歴詳細</h2>
    <div class="p-3"></div>
        <div class="row">
          <div class="col-10">
            <form>
              <label for="name" class="col-sm-2">購入者</label>
                <%= @order.name %>
              </br>
              <label for="introduction" class="col-sm-2">注文日</label>
                <%= @order.created_at %>
              </br>
              <label for="introduction" class="col-sm-2">配送先</label>
                〒<%= @order.postal_code %>
                  <%= @order.address %>
                  <%= @order.name %>
              </br>
              <label for="introduction" class="col-sm-2">支払方法</label>
                <%= @order.payment_method %>
            </form>
          </div>
        </div>
        <div class="row">
          <div class="col-6">
            <table class="table">
              <tr>
                <th>商品名</th>
                <th>単価(税込)</th>
                <th>数量</th>
                <th>小計</th>
              </tr>
              <% @order_details.each do |order_detail| %>
              <tbody>
                <td><%= order_detail.item.name %></td>
                <td><%= order_detail.item.with_tax_price %></td>
                <td><%= order_detail.amount %></td>
                <td><%= order_detail.item.with_tax_price * order_detail.amount %></td>
              </tbody>
              <% end %>
            </table>
          </div>
        </div>
        <div class="row">
          <div class="col-3">
            <table class="table" border=2>
              <tr>
                <th>商品合計</th>
                <td><%= @order.total_payment - @order.shipping_cost %></td>
              </tr>
              <tr>
                <th>送料</th>
                <td><%= @order.shipping_cost %></td>
              </tr>
              <tr>
                <th>請求金額合計</th>
                <td><%= @order.total_payment %></td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>