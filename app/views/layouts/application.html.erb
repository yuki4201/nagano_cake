<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
  <header>
    <main>
      <nav class="navbar navbar-expand-lg navbar-green bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <span>nagano_cake</span>
        </a>
        <div class="container">
          <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if admin_signed_in? %>
              <li class="nav-item">
                <%= link_to '　商品一覧　', admin_items_path %>
              </li>
              <li class="nav-item">
                <%= link_to '　会員一覧　', admin_customers_path %>
              </li>
              <li class="nav-item">
                <%= link_to '　注文履歴一覧　', public_orders_path %>
              </li>
              <li class="nav-item">
                <%= link_to '　ジャンル一覧　', admin_genres_path %>
              </li>
              <li class="nav-item">
                <%= link_to '　ログアウト　', destroy_admin_session_path, method: :delete %>
              </li>
              <% elsif customer_signed_in? %>
              <li class="nav-item">
                <%= link_to '　マイページ　', customers_my_page_path %>
              </li>
              <li class="nav-item">
                <%= link_to '　商品一覧　', customers_items_path %>
              </li>
              <li class="nav-item">
                <%= link_to '　カート　', customers_cart_items_path %>
              </li>
              <li class="nav-item">
                <%= link_to '　ログアウト　', destroy_customer_session_path, method: :delete %>
              <% else %>
              <li class="nav-item">
                <%= link_to 'About', '/customers/about' %>
              </li>
              <li class="nav-item">
                <%= link_to '商品一覧', customers_items_path %>
              </li>
              <li class="nav-item">
                <%= link_to '新規登録', new_customer_registration_path %>
              </li>
              <li class="nav-item">
                <%= link_to 'ログイン', new_customer_session_path %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
  <%= yield %>
</main>
